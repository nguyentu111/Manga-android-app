<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReadManga"
    android:orientation="vertical"
    android:id="@+id/mainlayout">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/read_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/pagesLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></LinearLayout>
        </ScrollView>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/topMenu"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:alpha="1"
            android:background="@drawable/linear_color"
            android:paddingHorizontal="20dp"
            android:paddingTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">

             <RelativeLayout

                 android:layout_width="match_parent"
                 android:layout_height="match_parent">
                 <androidx.cardview.widget.CardView
                     android:id="@+id/back_to_chapter"
                     app:cardCornerRadius="20dp"
                     app:cardBackgroundColor="#000"
                     android:layout_width="35dp"
                     android:layout_height="35dp">
                     <ImageView

                         android:layout_gravity="center"
                         android:layout_width="30dp"
                         android:layout_height="30dp"
                         android:src="@drawable/xmark"/>
                 </androidx.cardview.widget.CardView>

                 <androidx.cardview.widget.CardView
                     android:id="@+id/menuRead"
                     android:layout_alignParentRight="true"
                     app:cardCornerRadius="20dp"
                     app:cardBackgroundColor="#000"
                     android:layout_width="35dp"
                     android:layout_height="35dp">
                     <ImageView
                         android:layout_gravity="center"
                         android:layout_width="25dp"
                         android:layout_height="25dp"
                         android:src="@drawable/baseline_more_vert_24"/>
                 </androidx.cardview.widget.CardView>
                 <LinearLayout
                     android:id="@+id/show_chapter_bottom_sheet_btn"
                     android:layout_centerVertical="true"
                     android:orientation="vertical"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/read_manga_name"
                        android:textColor="#fff"
                        android:textSize="17dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                     <LinearLayout
                         android:id="@+id/show_chapter_bottom_btn"
                         android:orientation="horizontal"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content">
                         <TextView
                             android:id="@+id/read_chapter_name"
                             android:textColor="#fff"
                             android:textSize="15dp"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:drawableRight="@drawable/chervon_down"
                             />
                     </LinearLayout>
                 </LinearLayout>
             </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>