<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".tabs.tab1"
    android:id="@+id/tab1">

        <ScrollView
            android:paddingTop="20dp"
            android:id="@+id/tab4ScrollView"
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0">
            <LinearLayout
                android:paddingHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phân loại nội dung"
                    android:textSize="17dp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    />
                <com.nex3z.flowlayout.FlowLayout
                    android:layout_marginBottom="20dp"
                    android:id="@+id/contentRating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:flChildSpacingForLastRow="align"
                    app:flRowSpacing="8dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Trạng thái"
                    android:textSize="17dp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    />
                <com.nex3z.flowlayout.FlowLayout
                    android:layout_marginBottom="20dp"
                    android:id="@+id/status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:flChildSpacingForLastRow="align"
                    app:flRowSpacing="8dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loại tạp chí"
                    android:textSize="17dp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    />
                <com.nex3z.flowlayout.FlowLayout
                    android:layout_marginBottom="20dp"
                    android:id="@+id/magazineDemographic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:flChildSpacingForLastRow="align"
                    app:flRowSpacing="8dp"
                    />
                <View
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ccc" />
                <LinearLayout
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:gravity=""
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Chế độ"
                        android:textSize="17dp"
                        android:textColor="#fff"
                        android:textStyle="bold"

                        />
                    <TextView

                        android:gravity=""
                        android:layout_width="27dp"
                        android:layout_height="wrap_content"
                        android:text="Và"
                        android:textSize="17dp"
                        android:textColor="#fff"
                        android:textStyle="bold"

                        />
                    <Switch
                        android:id="@+id/filter_tag_mode"
                        android:layout_width="60dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="Hợp"
                        android:textSize="17dp"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:layout_marginBottom="15dp"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chủ đề"
                    android:textSize="17dp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    />
                <com.nex3z.flowlayout.FlowLayout
                    android:layout_marginBottom="20dp"
                    android:id="@+id/theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:flChildSpacingForLastRow="align"
                    app:flRowSpacing="8dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Định dạng"
                    android:textSize="17dp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    />
                <com.nex3z.flowlayout.FlowLayout
                    android:layout_marginBottom="20dp"
                    android:id="@+id/format"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:flChildSpacingForLastRow="align"
                    app:flRowSpacing="8dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thể loại"
                    android:textSize="17dp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    />
                <com.nex3z.flowlayout.FlowLayout
                    android:layout_marginBottom="20dp"
                    android:id="@+id/genre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:flChildSpacingForLastRow="align"
                    app:flRowSpacing="8dp"
                    />
                <androidx.cardview.widget.CardView
                    android:id="@+id/btnFilter"
                    android:layout_marginBottom="40dp"
                    app:cardCornerRadius="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:background="#FF4D00"
                        android:textStyle="bold"
                        android:text="Tìm"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>